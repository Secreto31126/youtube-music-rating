{
    "name": "Youtube Music Ratings",
    "description": "Find out which song is the most popular within an album or public playlist based on the community listenings.",
    "version": "1.5.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "js": ["main.js"],
            "matches": ["https://music.youtube.com/*"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "/popup/index.html",
        "default_icons": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        }
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }
}
